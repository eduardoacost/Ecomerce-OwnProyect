{
  "compilerOptions": {
    "target": "ES6",                            // Versión de ECMAScript de salida
    "module": "commonjs",                       // Usar módulos CommonJS
    "moduleResolution": "node",                 // Usar la resolución de módulos de Node.js
    "strict": true,                             // Activar comprobaciones estrictas
    "esModuleInterop": true,                    // Permitir interoperabilidad entre módulos ES y CommonJS
    "skipLibCheck": true,                       // Omitir la comprobación de tipos en las bibliotecas
    "forceConsistentCasingInFileNames": true,   // Forzar consistencia de mayúsculas/minúsculas en los nombres de archivos
    "outDir": "./dist",                         // Carpeta de salida para los archivos compilados
    "rootDir": "./src",                         // Carpeta raíz para los archivos fuente
    "types": ["node","express"]                           // Incluir tipos de Node.js
  },
  "include": ["src/**/*.ts"],                    // Incluir todos los archivos .ts dentro de src
  "exclude": ["node_modules"]                    // Excluir la carpeta node_modules
}
